<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="container mt-3">
  <div class="row">
    <div class="col-6">
      <p>Recipe Count: <%= Recipe.count %></p>
    </div>
    <div class="col-6">
      <p class= "btn btn-primary mt-3 float-end"><%=link_to 'Sign In', new_user_session_path  %></p>
    </div>
  </div>

  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="recipe-card">
          <div class="recipe-card-content">
            <div class="recipe-card-title">
              <h4><%= link_to recipe.title, recipe_path(recipe) %></h4>
            </div>
            <p><%= recipe.rating %> <i class="fa fa-star" aria-hidden="true"></i></p>
          </div>
          <div class="recipe-card-actions">
            <%= link_to 'Edit', edit_recipe_path(recipe), class: 'ms-3 text-warning' %>
            <%= link_to "Remove", recipe_path(recipe),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'ms-3 text-danger'
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class='container'>
  <div class="col-sm">
    <button type="button" class="btn btn-primary btn-lg"><%= link_to 'Add a new recipe :)', new_recipe_path %></button>
  </div>
</div>
