<div class="container my-5">
  <div class="row justify-content-md-center">
    <h4 class='edit-title'>Edit Recipe</h4>
    <div class="col-md-6">  <%= simple_form_for @recipe do |f| %>
    <%= f.input :title %>
    <%= f.input :ingredients %>
  <p class="mt-3"> </p>
