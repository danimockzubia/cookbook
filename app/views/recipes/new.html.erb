<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div class='container'>
  <div class='new-form mt-5'>
  <h4>Add a Recipe <i class="fa fa-cutlery" aria-hidden="true"></i></h4>
    <%= simple_form_for [ @recipe ] do |f| %>
      <%= f.input :title %>
      <%= f.input :ingredients %>
      <%= f.input :rating, input_html: { min: 0, max: 5 } %>
      <%= f.input :description %>
      <%= f.submit "~submit recipe bb~", class: "btn mt-3" %>
    <% end %>
  </div>
</div>
