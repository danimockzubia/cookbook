<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div class="container mt-5">
  <div class="row" id='nav-row'>
      <div class="col-3">
        <p class="title-n"><%= link_to 'Random Recipe', recipes_path, class: 'nav-title' %></p>
      </div>
      <div class='col-6' id='title'>
        <h2><%= link_to "Abb and Dan's Recipes", recipes_path %> </h2>
      </div>
      <div class="col-3">
          <% if current_user %>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <div class=" btn float-end" >Log out</div>
                <% end %>
            <% else %>
            <%= link_to new_user_registration_path, class: "navbar-btn btn btn-success d-flex justify-content-between align-items-center" do %>
              <p class="letter-spacing mb-0">Sign up</p>
          <% end %>
        <% end %>
        </div>
    </div>
  </div>


<div class='container'>
  <div class='new-form mt-5'>
  <h4>Add a Recipe <i class="fa fa-cutlery" aria-hidden="true"></i></h4>
    <%= simple_form_for [ @recipe ] do |f| %>
      <%= f.input :title %>
      <%= f.input :ingredients %>
      <p class="mt-3"> </p>
      <%= f.input :category, :collection => ["Week-night", "Special", "Show-offy", "Basic"], prompt: 'Select Category', label: false %>
      <p class="mt-3"> </p>
      <%= f.input :description %>
      <%= f.submit "~submit recipe~", class: "btn mt-3" %>
    <% end %>
  </div>
</div>
